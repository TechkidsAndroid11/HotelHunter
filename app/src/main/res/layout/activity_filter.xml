<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Giá:"
        android:textSize="24dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/gr_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"

        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100k" />

        <RadioButton
            android:id="@+id/rb_med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200k" />

        <RadioButton
            android:id="@+id/rb_strong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300k" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gr_price"
        android:layout_marginLeft="8dp"
        android:text="Khoảng cách:"
        android:textSize="24dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/gr_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_distance"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"

        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#60; 5km" />

        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5km" />

        <RadioButton
            android:id="@+id/rb_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#62; 5km" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gr_distance"
        android:layout_marginLeft="8dp"
        android:text="Tiện ích:"
        android:textSize="24dp"
        android:textStyle="bold" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi"
        android:id="@+id/cb_1"
        android:layout_below="@+id/tv_service"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi"
        android:id="@+id/cb_2"
        android:layout_below="@+id/cb_3"
        android:layout_toRightOf="@+id/cb_4"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi"
        android:id="@+id/cb_4"
        android:layout_below="@+id/cb_1"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi"
        android:id="@+id/cb_3"
        android:layout_below="@+id/tv_service"
        android:layout_toRightOf="@+id/cb_1"/>
    <RelativeLayout
        android:layout_below="@+id/cb_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_filter"
            android:text="LỌC"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_cancer"
            android:layout_toRightOf="@+id/bt_filter"
            android:text="HỦY"/>
    </RelativeLayout>

</RelativeLayout>